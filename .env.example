# Base de données PostgreSQL
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# ═══════════════════════════════════════════════════════════════
# Sécurité - Secrets requis en production (minimum 32 caractères)
# Générer avec: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# ═══════════════════════════════════════════════════════════════
SESSION_SECRET="changez-moi-par-une-chaine-aleatoire-de-32-caracteres-minimum"
SMTP_SECRET="changez-moi-aussi-par-une-autre-chaine-aleatoire-de-32-chars"
ASSESSMENT_LINK_SECRET="changez-moi-encore-par-une-autre-chaine-de-32-caracteres"
ENCRYPTION_KEY="changez-moi-cle-chiffrement-secrets-collecteurs-32-chars"

# Configuration de l'administrateur initial (pour seed production)
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="ChangeMe@123SecurePassword"

# Configuration de la municipalité
MUNICIPALITY_NAME="Commune de..."

# Environnement
NODE_ENV="development"

# ═══════════════════════════════════════════════════════════════
# Configuration des URLs
# ═══════════════════════════════════════════════════════════════

# Option 1: Domaine unique (SIMPLE)
# Frontend et API sur le même domaine
NEXT_PUBLIC_APP_URL="https://votre-domaine.com"
NEXT_PUBLIC_API_BASE_URL="https://votre-domaine.com/api"

# Option 2: Sous-domaines séparés (RECOMMANDÉ pour production)
# Frontend et API sur des sous-domaines différents
# NEXT_PUBLIC_APP_URL="https://app.votre-domaine.com"
# NEXT_PUBLIC_API_BASE_URL="https://api.votre-domaine.com"
# ALLOWED_ORIGINS="https://app.votre-domaine.com"

# Pour développement local:
# NEXT_PUBLIC_APP_URL="http://localhost:3000"
# NEXT_PUBLIC_API_BASE_URL="http://localhost:3000/api"

# ═══════════════════════════════════════════════════════════════
# Sécurité avancée
# ═══════════════════════════════════════════════════════════════

# Désactiver les cookies sécurisés (UNIQUEMENT pour debugging, PAS en production!)
# FORCE_SECURE_COOKIES="false"

